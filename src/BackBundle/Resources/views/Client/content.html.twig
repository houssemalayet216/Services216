{% extends '@Back/default/templateclient.html.twig' %}
{% block section_haider %}
<section class="content-header">
      <h1>
        Tableau de bord
        <small>Services 216</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Tableau de bord</li>
      </ol>
    </section>
{%endblock%}

  {%block content%} 

   <section class="content">
 <div class="row">
       
      
        <div class="col-md-4 col-sm-6 col-xs-12">
          <div class="info-box">
            <span class="info-box-icon bg-red"><i class="fa fa-sticky-note"></i></span>

            <div class="info-box-content">
              <span class="info-box-text">Annonces publier</span>
              <span class="info-box-number">{{annonces}}</span>
            </div>
          
          </div>
         
        </div>
      

       
        <div class="clearfix visible-sm-block"></div>

        <div class="col-md-4 col-sm-6 col-xs-12">
          <div class="info-box">
            <span class="info-box-icon bg-green"><i class="fa fa-share"></i></span>

            <div class="info-box-content">
              <span class="info-box-text">Demandes de services</span>
              <span class="info-box-number">{{demandes}}</span>
            </div>
            <!-- /.info-box-content -->
          </div>
          <!-- /.info-box -->
        </div>
        <!-- /.col -->
        <div class="col-md-4 col-sm-6 col-xs-12">
          <div class="info-box">
            <span class="info-box-icon bg-yellow"><i class="fa fa-reply"></i></span>

            <div class="info-box-content">
              <span class="info-box-text">Propositions reçues</span>
              <span class="info-box-number">{{propositions}}</span>
            </div>
            <!-- /.info-box-content -->
          </div>
          <!-- /.info-box -->
        </div>
        <!-- /.col -->
      </div>



<div class="row">
<div class="col-md-12">


 <div class="box">
            <div class="box-header with-border">
              <h3 class="box-title">Vos dernier payement</h3>
            </div>
            <!-- /.box-header -->
             {%if payments|length > 0 %}
            <div class="box-body">
              <table class="table table-bordered">
               <tr>
                  <th>Bénifécaire</th>
                  <th>Service</th>
                  <th>Montant</th>
                  <th>devis</th>
                    <th>Date de payement</th>
                </tr>
                 
                 
                {% for payment in payments %}
                <tr>
                 
                <td>{{payment.Agent.raison}}</td>
                <td>{{payment.annonce.service.titre}}</td>
                <td>{{payment.montant}}</td>
                  {% if payment.tarification =='eur' %}
                <td>Euro</td>
                 {% else %}
                  <td>Usd</td>
                 {%endif%}

                <td>{{payment.datepayment|date("m/d/Y H:i") }}</td>
                   



                {%endfor%}
               
                
                
              </table>

               {%else%}
                <tr style="text-align:center;"> <h2 class="center" style="margin-left:330px;">Aucune résultat trouvé </h2> </tr>
                {%endif%}
            </div>
         
          </div>







</div>








</div>








</section>




































 {% endblock %}

