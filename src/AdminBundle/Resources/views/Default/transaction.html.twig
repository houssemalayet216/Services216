<script>
function voirtransactionadmin(id)
{
$('.containertransaction').html('<div id="loadingvoir" style=""></div>');  
$.ajax({
 dataType:"json",
url:'/voir-transaction',
type:'POST',
data:{id:id},
success:function(data,status,object){
  
 
    $('.containertransaction').html(data.output);
  

}

});

}


</script>

