{% extends '@Admin/default/templateadmin.html.twig' %}
{% block section_haider %}
<section class="content-header">
      <h1>
        Tableau de bord
        <small>Admin</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Admin Tableau de bord</a></li>
        <li class="active">Dashboard</li>
      </ol>
    </section>
{%endblock%}



 {% block content %}

   <section  class="content">





<div class="row">
       
      
        <div class="col-md-3 col-sm-6 col-xs-12">
          <div class="info-box">
            <span class="info-box-icon bg-red"><i class="ion ion-ios-people-outline"></i></span>

            <div class="info-box-content">
              <span class="info-box-text">Clients</span>
              <span class="info-box-number">{{clients}}</span>
            </div>
          
          </div>
         
        </div>
      

       
        <div class="clearfix visible-sm-block"></div>

        <div class="col-md-3 col-sm-6 col-xs-12">
          <div class="info-box">
            <span class="info-box-icon bg-green"><i class="fa fa-building-o"></i></span>

            <div class="info-box-content">
              <span class="info-box-text">Agents de services</span>
              <span class="info-box-number">{{agents}}</span>
            </div>
          
          </div>
       
        </div>
     
          <div class="clearfix visible-sm-block"></div>

        <div class="col-md-3 col-sm-6 col-xs-12">
          <div class="info-box">
            <span class="info-box-icon bg-green"><i class="fa fa-sticky-note-o"></i></span>

            <div class="info-box-content">
              <span class="info-box-text">Offres</span>
              <span class="info-box-number">{{offres}}</span>
            </div>
          
          </div>
       
        </div>










        <div class="col-md-3 col-sm-6 col-xs-12">
          <div class="info-box">
            <span class="info-box-icon bg-yellow"><i class="fa fa-tag"></i></span>

            <div class="info-box-content">
              <span class="info-box-text">Demandes</span>
              <span class="info-box-number">{{demandes}}</span>
            </div>
            
          </div>
       
        </div>
       
      </div>































<div class="row">
<div class="col-md-12">






 <div class="box" >
            <div class="box-header with-border">
              <h3 class="box-title">Dernier transaction</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
            {% if   transactions|length  > 0 %}
              <table class="table table-bordered">
                <tr>
                  <th>Bénifécaire</th>
                  <th>Client</th>
                  <th>Service</th>
                  <th>Montant</th>
                  <th>devis</th>
                    <th>Date de payement</th>
                </tr>
                 
                {% for transaction in transactions %}
                <tr>
                 
                <td>{{transaction.Agent.raison}}</td>
                <td>{{transaction.client.username}}</td>
                <td>{{transaction.annonce.service.titre}}</td>
                <td>{{transaction.montant}}</td>
                <td>{{transaction.tarification}}</td>
                <td>{{transaction.datepayment|date("m/d/Y H:i") }}</td>
                   



                </tr>
                {%endfor%}
                
                
              </table>
               {%else%}
                <tr style="text-align:center;"> <h2 class="center"style="margin-left:330px;">Aucune résultat trouvé </h2> </tr>
                {%endif%}
            </div>
         
          </div>







</div>








</div>





























</section>


















  {% endblock %}
